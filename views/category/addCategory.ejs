<!doctype html>
<html lang="en">
<head>
  <title>Add Category</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background-color: #0f172a;
      color: #e2e8f0;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .card {
      background: #1e293b;
      border: none;
      border-radius: 1rem;
      box-shadow: 0 0 20px rgba(0,0,0,0.3);
    }

    .card-header {
      background: linear-gradient(90deg, #2563eb, #1d4ed8);
      color: #fff;
      font-weight: 600;
      border-top-left-radius: 1rem;
      border-top-right-radius: 1rem;
    }

    .form-control {
      background-color: #334155;
      border: 1px solid #475569;
      color: #f1f5f9;
    }

    .form-control:focus {
      background-color: #1e293b;
      border-color: #2563eb;
      color: #fff;
      box-shadow: none;
    }

    label {
      color: #cbd5e1;
    }

    .btn-primary {
      background-color: #2563eb;
      border: none;
      font-weight: 500;
      transition: all 0.3s ease;
    }

    .btn-primary:hover {
      background-color: #1d4ed8;
      transform: translateY(-2px);
    }

    .alert {
      border-radius: 0.5rem;
    }
  </style>
</head>
<body>

  <%- include('../partials/header') %>

  <main class="container my-5 d-flex justify-content-center align-items-center flex-grow-1" style="margin-left:250px;">
    <div class="col-lg-6 col-md-8 col-sm-10">
      <div class="card">
        <div class="card-header text-center py-3">
          <h4 class="mb-0">Add New Category</h4>
        </div>

        <% if (typeof success !== 'undefined') { %>
          <div class="alert alert-success text-center m-3"><%= success %></div>
        <% } %>
        <% if (typeof error !== 'undefined') { %>
          <div class="alert alert-danger text-center m-3"><%= error %></div>
        <% } %>

        <div class="card-body p-4">
          <form action="/category/create" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
              <label class="form-label fw-semibold">Category Name</label>
              <input type="text" class="form-control" name="name" placeholder="Enter category name" required>
            </div>

            <div class="mb-3">
              <label class="form-label fw-semibold">Category Image</label>
              <input type="file" class="form-control" name="image" accept="image/*">
              <small class="text-muted">Optional. Max 5MB</small>
            </div>

            <div class="text-center mt-4">
              <button type="submit" class="btn btn-primary px-5 py-2">Add Category</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
