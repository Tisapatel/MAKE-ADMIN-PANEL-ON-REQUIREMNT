<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login | MyApp</title>

  <!-- Bootstrap Icons + Google Fonts -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

  <style>
    *,
    *::before,
    *::after {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      font-family: 'Inter', sans-serif;
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background: #0d1117;
      color: #fff;
    }

    .container {
      display: flex;
      width: 100%;
      max-width: 1000px;
      background: #0d1117;
    }

    /* Left side */
    .left-side {
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: 40px;
      border-right: 1px solid #30363d;
    }

    .left-side h1 {
      color: #1d9bf0;
      font-size: 32px;
      font-weight: 700;
      margin-bottom: 10px;
    }

    .left-side p {
      color: #bbb;
      font-size: 15px;
    }

    /* Right side */
    .right-side {
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 40px;
    }

    .login-card {
      width: 100%;
      max-width: 380px;
      background: transparent;
      padding: 30px;
    }

    .login-card h3 {
      font-weight: 700;
      margin-bottom: 20px;
      text-align: center;
      color: #fff;
    }

    .text-small {
      font-size: 13px;
      color: #9ca3af;
      margin-bottom: 16px;
    }

    .input-group {
      position: relative;
      margin-bottom: 18px;
      width: 100%;
    }

    .input-group input {
      width: 100%;
      padding: 12px 40px 12px 40px;
      border: 1px solid #30363d;
      border-radius: 8px;
      background: #161b22;
      font-size: 15px;
      color: #fff;
      transition: all 0.2s ease;
    }

    .input-group input:focus {
      border-color: #1d9bf0;
      box-shadow: 0 0 0 3px rgba(29, 155, 240, 0.25);
      outline: none;
    }

    .input-icon {
      position: absolute;
      left: 14px;
      top: 50%;
      transform: translateY(-50%);
      color: #1d9bf0;
      font-size: 18px;
      pointer-events: none;
    }

    .toggle-password {
      position: absolute;
      right: 14px;
      top: 50%;
      transform: translateY(-50%);
      color: #9ca3af;
      font-size: 18px;
      cursor: pointer;
    }

    .btn-login {
      width: 100%;
      padding: 12px;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      font-weight: 600;
      color: #fff;
      background: #1d9bf0;
      margin-top: 5px;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .btn-login:hover {
      background: #1484c6;
      transform: translateY(-2px);
      box-shadow: 0 6px 15px rgba(29, 155, 240, 0.35);
    }

    .signup-text {
      margin-top: 16px;
      text-align: center;
      font-size: 14px;
      color: #bbb;
    }

    .signup-text a {
      color: #1d9bf0;
      font-weight: 600;
      text-decoration: none;
    }

    .signup-text a:hover {
      text-decoration: underline;
    }

    .alert {
      padding: 10px 12px;
      border-radius: 8px;
      margin-bottom: 12px;
      font-size: 13px;
    }

    .alert-success {
      background-color: #d1e7dd;
      color: #0f5132;
    }

    .alert-danger {
      background-color: #f8d7da;
      color: #842029;
    }
  </style>
</head>

<body>
  <div class="container">
    <!-- Left Side -->
    <div class="left-side">
      <h1>Login</h1>
      <p>Enter your EmailId and password</p>
    </div>

    <!-- Right Side -->
    <div class="right-side">
      <div class="login-card">
        <h3>Your Account</h3>
        <p class="text-small">Access your BlueBeetle account</p>

        <!-- Flash Messages -->
        <% if (success_msg && success_msg.length> 0) { %>
          <% success_msg.forEach(msg=> { %>
            <div class="alert alert-success">
              <%= msg %>
            </div>
            <% }) %>
              <% } %>
                <% if (error_msg && error_msg.length> 0) { %>
                  <% error_msg.forEach(msg=> { %>
                    <div class="alert alert-danger">
                      <%= msg %>
                    </div>
                    <% }) %>
                      <% } %>

                        <form action="/login" method="POST">
                          <div class="input-group">
                            <i class="bi bi-envelope input-icon"></i>
                            <input type="email" name="email" placeholder="Email Address" required>
                          </div>

                          <div class="input-group">
                            <i class="bi bi-lock input-icon"></i>
                            <input type="password" id="password" name="password" placeholder="Password" required>
                            <i class="bi bi-eye-slash toggle-password" data-target="password"></i>
                          </div>
                          <div class="forgot-password-text" style="text-align:right; margin-top:3px; font-size:13px;">
                            <a href="/forgotPass" style="color:#1d9bf0; text-decoration:none;">Forgot Password?</a>
                          </div>

                          <button type="submit" style="margin-top:6px;" class="btn-login">Login</button>
                        </form>

                        <div class="signup-text">
                          New here? <a href="/signup">Create an account</a>
                        </div>
      </div>
    </div>
  </div>

  <script>
    // Toggle password visibility
    document.querySelectorAll('.toggle-password').forEach(icon => {
      icon.addEventListener('click', () => {
        const targetId = icon.getAttribute('data-target');
        const input = document.getElementById(targetId);

        if (input.type === "password") {
          input.type = "text";
          icon.classList.remove("bi-eye-slash");
          icon.classList.add("bi-eye");
        } else {
          input.type = "password";
          icon.classList.remove("bi-eye");
          icon.classList.add("bi-eye-slash");
        }
      });
    });
  </script>
</body>

</html>