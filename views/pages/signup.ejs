<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Signup | MyApp</title>

  <!-- Bootstrap Icons + Google Fonts -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

  <style>
    *,
    *::before,
    *::after {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      font-family: 'Inter', sans-serif;
      height: 100vh;
      background: #0d1117;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #fff;
    }

    .container {
      display: flex;
      width: 100%;
      max-width: 1000px;
      background: #0d1117;
    }

    /* Left side */
    .left-side {
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: 40px;
    }

    .left-side h1 {
      color: #1d9bf0;
      font-size: 32px;
      font-weight: 700;
    }

    .left-side p {
      margin-top: 10px;
      color: #bbb;
      font-size: 15px;
    }

    /* Divider line */
    .divider {
      width: 1px;
      background: #30363d;
      margin: 0 20px;
    }

    /* Right side */
    .right-side {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 40px;
    }

    .text-small {
      font-size: 13px;
      color: #9ca3af;
      margin-bottom: 16px;
      padding-bottom: 10px;
    }

    .signup-card {
      background: transparent;
      padding: 30px;
      width: 100%;
      max-width: 380px;
    }

    .signup-card h4 {
      font-weight: 700;
      margin-bottom: 20px;
      color: #fff;
      text-align: center;
    }

    .input-group {
      position: relative;
      margin-bottom: 18px;
      width: 100%;
    }

    .input-group input {
      width: 100%;
      padding: 12px 40px 12px 40px;
      border: 1px solid #30363d;
      border-radius: 8px;
      background: #0d1117;
      font-size: 15px;
      color: #fff;
      transition: all 0.2s ease;
    }

    .input-group input:focus {
      border-color: #1d9bf0;
      box-shadow: 0 0 0 3px rgba(29, 155, 240, 0.25);
      outline: none;
    }

    .input-icon {
      position: absolute;
      left: 14px;
      top: 50%;
      transform: translateY(-50%);
      color: #1d9bf0;
      font-size: 18px;
      pointer-events: none;
    }

    .toggle-password {
      position: absolute;
      right: 14px;
      top: 50%;
      transform: translateY(-50%);
      color: #9ca3af;
      font-size: 18px;
      cursor: pointer;
    }

    .btn-signup {
      width: 100%;
      padding: 12px;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      font-weight: 600;
      color: #fff;
      background: #1d9bf0;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
      margin-top: 5px;
    }

    .btn-signup:hover {
      background: #1484c6;
      transform: translateY(-2px);
      box-shadow: 0 6px 15px rgba(29, 155, 240, 0.35);
    }

    .login-text {
      margin-top: 14px;
      text-align: center;
      font-size: 14px;
      color: #bbb;
    }

    .login-text a {
      color: #1d9bf0;
      font-weight: 600;
      text-decoration: none;
      margin-left: 4px;
    }

    .login-text a:hover {
      text-decoration: underline;
    }
  </style>
</head>

<body>

  <div class="container">
    <!-- Left Side -->
    <div class="left-side">
      <h1>Create Account</h1>
      <p>We're so excited to have you join us!</p>
    </div>

    <!-- Divider -->
    <div class="divider"></div>

    <!-- Right Side -->
    <div class="right-side">
      <div class="signup-card">
        <h3>Your Account</h3>
        <p class="text-small">You are creating an account on BlueBeetle</p>

        <!-- Flash Messages -->
        <% if (error_msg && error_msg.length> 0) { %>
          <div style="color: #ff4d4f; text-align: center; margin-bottom: 10px; font-weight: 600;">
            <%= error_msg[0] %>
          </div>
          <% } %>

            <% if (success_msg && success_msg.length> 0) { %>
              <div style="color: #4bb543; text-align: center; margin-bottom: 10px; font-weight: 600;">
                <%= success_msg[0] %>
              </div>
              <% } %>

                <form action="/signup" method="POST">
                  <div class="input-group">
                    <i class="bi bi-person input-icon"></i>
                    <input type="text" name="username" placeholder="Username" required>
                  </div>

                  <div class="input-group">
                    <i class="bi bi-envelope input-icon"></i>
                    <input type="email" name="email" placeholder="Email Address" required>
                  </div>

                  <div class="input-group">
                    <i class="bi bi-lock input-icon"></i>
                    <input type="password" id="password" name="password" placeholder="Password" required>
                    <i class="bi bi-eye-slash toggle-password" data-target="password"></i>
                  </div>

                  <div class="input-group">
                    <i class="bi bi-lock input-icon"></i>
                    <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password"
                      required>
                    <i class="bi bi-eye-slash toggle-password" data-target="confirmPassword"></i>
                  </div>

                  <button type="submit" class="btn-signup">Sign Up</button>
                </form>

                <div class="login-text">
                  Existing user? <a href="/login">Access your account</a>
                </div>
      </div>
    </div>
  </div>

  <script>
    // Toggle password visibility
    document.querySelectorAll('.toggle-password').forEach(icon => {
      icon.addEventListener('click', () => {
        const targetId = icon.getAttribute('data-target');
        const input = document.getElementById(targetId);

        if (input.type === "password") {
          input.type = "text";
          icon.classList.remove("bi-eye-slash");
          icon.classList.add("bi-eye");
        } else {
          input.type = "password";
          icon.classList.remove("bi-eye");
          icon.classList.add("bi-eye-slash");
        }
      });
    });
  </script>

</body>

</html>